{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "DT0",
  "patterns": [
    {
      "include": "#keywords"
    },
    {
      "include": "#builtin-types"
    },
    {
      "include": "#operator"
    },
    {
      "include": "#integer"
    },
    {
      "include": "#identifier"
    }
  ],
  "repository": {
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.dt0",
          "match": "\\b(pub|fn|return|let|if|else)\\b"
        }
      ]
    },
    "builtin-types": {
      "patterns": [
        {
          "name": "support.type.dt0",
          "match": "\\b(i32)\\b"
        }
      ]
    },
    "operator": {
      "patterns": [
        {
          "name": "keyword.operator.assignment.dt0",
          "match": "\\="
        },
        {
          "name": "keyword.operator.arithmetic.dt0",
          "match": "(\\+\\+|\\-\\-|\\+|\\-|\\*|\\/)"
        },
        {
          "name": "keyword.operator.dt0",
          "match": "(\\&\\&|\\|\\|)"
        }
      ]
    },
    "integer": {
      "patterns": [
        {
          "name": "constant.numeric.integer.dt0",
          "match": "\\b([1-9][0-9]*|0)\\b"
        }
      ]
    },
    "identifier": {
      "patterns": [
        {
          "name": "variable.other.dt0",
          "match": "\\b[a-zA-Z_]\\w*\\b"
        }
      ]
    }
  },
  "scopeName": "source.dt0"
}
